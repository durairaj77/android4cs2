<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        
        <TextView android:id="@+id/welcome" 
	        android:textSize="24sp"
	        android:text="@string/welcome" 
	        android:padding="10sp" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" />
	            
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        	android:id="@+id/linLay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome"
            android:gravity="center_horizontal" >
            
	        <ImageView android:id="@+id/left"
	            android:layout_height="wrap_content"
	            android:src="@drawable/die1"
	            android:scaleType="centerInside"
	            android:layout_width="wrap_content" />
	            
	        <ImageView android:id="@+id/right" 
	            android:layout_height="wrap_content"
	            android:src="@drawable/die1"
	            android:scaleType="centerInside"
	            android:layout_width="wrap_content" />
            </LinearLayout>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/linLay" android:id="@+id/random" android:text="@string/random" android:layout_centerInParent="true"></Button>
</RelativeLayout>
